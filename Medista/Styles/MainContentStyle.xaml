<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="MainContentStretcherStyle" TargetType="{x:Type FrameworkElement}">
        <Setter Property="MaxWidth" Value="1500"></Setter>
        <Setter Property="Margin" Value="40,0,40,0"></Setter>
    </Style>
    <Style x:Key="MainContentStyle" TargetType="{x:Type FrameworkElement}" BasedOn="{StaticResource MainContentStretcherStyle}">
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
    </Style>
</ResourceDictionary>