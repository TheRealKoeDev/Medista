<Window
    d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel}"
    x:Class="LazyLoops.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:LazyLoops.Views"
    xmlns:viewModels="clr-namespace:LazyLoops.ViewModels"
    mc:Ignorable="d"
    Style="{DynamicResource MainWindowStyle}"
>
    <Window.Resources>
        <ResourceDictionary Source="../Styles/MainWindowStyle.xaml" />
    </Window.Resources>
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            ResizeBorderThickness="5"
            NonClientFrameEdges="Left, Right, Bottom"
            UseAeroCaptionButtons="True"
        />
    </WindowChrome.WindowChrome>
    <DockPanel>
        <views:WindowTitleBar DockPanel.Dock="Top"></views:WindowTitleBar>
        <ContentControl Content="{ Binding CurrentViewModel }">
            <ContentControl.Resources></ContentControl.Resources>
        </ContentControl>
    </DockPanel>
</Window>
